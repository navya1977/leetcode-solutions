class Solution {
public:
    int minIncrementForUnique(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int n=nums.size();
        int count =0;
        int prev=nums[0];
        for(int i=1;i<n;i++){
           if(nums[i]<=prev){
            count+=(prev+1-nums[i]);
            nums[i]=prev+1;
           }
           prev=nums[i];
        }
        return count;
        
    }
};
