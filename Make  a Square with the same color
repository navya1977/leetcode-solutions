class Solution {
public:
    bool canMakeSquare(vector<vector<char>>& grid) {
        for(int i = 0; i < 2; ++i){
            for(int j = 0; j < 2; ++j){
                int white = 0;
                if(grid[i][j] == 'W') ++white;
                if(grid[i + 1][j] == 'W') ++white;
                if(grid[i][j + 1] == 'W') ++white;
                if(grid[i + 1][j + 1] == 'W') ++white;
                if(white != 2) return true;
            }
        }
        return false;
    }
};
