class Solution {
public:
    vector<int> leftRightDifference(vector<int>& nums) {
      int totalsum=0;
      int rightsum=0;
      int leftsum=0;
      int n=nums.size();
      for(int i=0;i<n;i++){
        totalsum+=nums[i];
         }
        vector<int> ans(n);
        for(int i=0;i<n;i++){
        int rightsum=totalsum-leftsum-nums[i];
        ans[i]=abs(leftsum-rightsum);
        leftsum+=nums[i];  
        }
      return ans;

    }
};
